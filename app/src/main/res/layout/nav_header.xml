<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:maxHeight="1000dp"
    android:maxWidth="400dp"
    android:background="@color/colorAccent"
    android:gravity="bottom"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/nav_header_layout">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_tourist"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        />

    <TextView
        android:id="@+id/nav_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/tv_nav_header"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsbold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nav_header_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_tv_date"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="13sp"/>

</LinearLayout>